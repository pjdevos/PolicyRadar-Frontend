# Policy Radar Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT & BASIC CONFIG
# =============================================================================
ENVIRONMENT=development
DEBUG=true
VERSION=1.0.0

# =============================================================================
# API SERVER SETTINGS
# =============================================================================
API__HOST=0.0.0.0
API__PORT=8000
API__WORKERS=1

# Authentication & Security
API__SECRET_KEY=dev-secret-change-in-production-abc123
API__API_KEY=optional-api-key-for-authenticated-endpoints

# External API Keys (at least one required for RAG)
API__OPENAI_API_KEY=sk-your-openai-key-here
API__ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Rate Limiting
API__RATE_LIMIT_ENABLED=true
API__DEFAULT_RATE_LIMIT=100
API__RAG_RATE_LIMIT=10
API__INGEST_RATE_LIMIT=5

# CORS Configuration
API__CORS_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app,https://your-railway-app.up.railway.app
API__CORS_METHODS=GET,POST
API__CORS_HEADERS=Content-Type,Accept,Authorization

# =============================================================================
# DATABASE & STORAGE SETTINGS
# =============================================================================
DB__VECTOR_DB_PATH=./vectors
DB__VECTOR_INDEX_NAME=policy_index
DB__FAISS_INDEX_TYPE=IVFFlat
DB__DATA_DIR=./data
DB__BACKUP_DIR=./backups

# =============================================================================
# SECURITY SETTINGS  
# =============================================================================
SECURITY__SECURITY_HEADERS_ENABLED=true
SECURITY__HSTS_MAX_AGE=31536000
SECURITY__TRUSTED_HOSTS=localhost,127.0.0.1,*.up.railway.app,*.vercel.app
SECURITY__MAX_QUERY_LENGTH=500
SECURITY__MAX_TOPIC_LENGTH=50

# =============================================================================
# RAG (AI) SETTINGS
# =============================================================================
RAG__LLM_PROVIDER=openai
RAG__LLM_MODEL=gpt-3.5-turbo
RAG__EMBEDDING_MODEL=text-embedding-ada-002
RAG__DEFAULT_K=8
RAG__MAX_K=20
RAG__SIMILARITY_THRESHOLD=0.7
RAG__MAX_TOKENS=4000
RAG__TIMEOUT_SECONDS=30

# =============================================================================
# DATA INGESTION SETTINGS
# =============================================================================
INGEST__EURACTIV_RSS_URL=https://www.euractiv.com/feed/
INGEST__EUR_LEX_SPARQL_ENDPOINT=http://publications.europa.eu/webapi/rdf/sparql
INGEST__MAX_DAYS_LOOKBACK=365
INGEST__DEFAULT_DAYS_LOOKBACK=30
INGEST__MAX_DOCUMENTS_PER_SOURCE=1000
INGEST__BATCH_SIZE=100
INGEST__RETRY_ATTEMPTS=3
INGEST__RETRY_DELAY=5

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG__LOG_LEVEL=INFO
LOG__LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG__LOG_FILE=./logs/policyradar.log
LOG__LOG_ROTATION=true
LOG__LOG_MAX_SIZE=10MB
LOG__LOG_BACKUP_COUNT=5

# =============================================================================
# FRONTEND CONFIGURATION (for development)
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_APP_NAME=Policy Radar
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Production Frontend URLs (update these for your deployment)
# REACT_APP_API_BASE_URL=https://policyradar-backend-production.up.railway.app/api
# REACT_APP_ENVIRONMENT=production

# =============================================================================
# RAILWAY/DEPLOYMENT SETTINGS
# =============================================================================
# These are typically set automatically by the deployment platform
# PORT=8000                    # Railway sets this automatically
# RAILWAY_ENVIRONMENT=production
