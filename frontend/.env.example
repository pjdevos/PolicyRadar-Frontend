# Policy Radar Frontend Configuration
# Copy this file to .env.local and configure for your environment

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_DEBUG_MODE=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API endpoint - UPDATE THIS for your deployment
REACT_APP_API_BASE_URL=http://localhost:8000/api

# Production examples:
# REACT_APP_API_BASE_URL=https://policyradar-backend-production.up.railway.app/api
# REACT_APP_API_BASE_URL=https://your-backend.herokuapp.com/api

# API client configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# =============================================================================
# APPLICATION SETTINGS  
# =============================================================================
REACT_APP_APP_NAME=Policy Radar
REACT_APP_APP_TITLE=Policy Radar Dashboard
REACT_APP_APP_DESCRIPTION=Brussels public affairs platform with AI-enhanced document tracking

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_RAG_ENABLED=true
REACT_APP_ANALYTICS_ENABLED=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================
REACT_APP_THEME=auto
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_QUERY_LENGTH=500

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development
GENERATE_SOURCEMAP=true
REACT_APP_DEBUG_MODE=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment for production builds
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG_MODE=false
# REACT_APP_ANALYTICS_ENABLED=true
# GENERATE_SOURCEMAP=false

# =============================================================================
# DEPLOYMENT PLATFORM VARIABLES
# =============================================================================
# These are typically set automatically by deployment platforms:
# Railway: PORT, RAILWAY_ENVIRONMENT
# Vercel: VERCEL_ENV, VERCEL_URL  
# Netlify: NETLIFY, DEPLOY_PRIME_URL